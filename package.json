{
  "name": "@susisu/mte-kernel",
  "version": "3.0.0-alpha",
  "description": "The text editor independent part of markdown-table-editor",
  "keywords": [
    "markdown",
    "table",
    "text",
    "editor",
    "format",
    "formatter"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/susisu/mte-kernel.git"
  },
  "author": "Susisu <susisu2413@yahoo.co.jp> (https://github.com/susisu)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/susisu/mte-kernel/issues"
  },
  "homepage": "https://github.com/susisu/mte-kernel#readme",
  "main": "dist/mte-kernel.js",
  "module": "dist/mte-kernel.mjs",
  "scripts": {
    "clean": "bsb -clean-world && rimraf coverage doc dist",
    "build:bs": "bsb -make-world",
    "build:rollup": "rollup -c",
    "build": "run-s build:bs build:rollup",
    "test:jest": "jest",
    "test": "run-s build:bs test:jest",
    "watch:build": "bsb -make-world -w -build-success 'yarn run doc'",
    "watch:test": "jest --watchAll",
    "watch": "screen -c .screenrc",
    "doc": "mkdirp doc && ocamldoc -html -d doc -I node_modules/bs-platform/lib/ocaml/ -I lib/bs/src src/*.mli",
    "prepare": "run-s build:bs test:jest build:rollup"
  },
  "devDependencies": {
    "@glennsl/bs-jest": "^0.4.4",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "bs-platform": "^4.0.5",
    "jest": "^23.5.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2",
    "rollup": "^0.64.1",
    "rollup-plugin-node-resolve": "^3.3.0"
  },
  "dependencies": {
    "meaw": "^2.0.0"
  }
}
