{
  "source": "lib",
  "destination": "doc",
  "plugins": [
    {
      "name": "esdoc-standard-plugin",
      "option": {
        "brand": {
          "title": "mte-kernel",
          "site": "https://github.com/susisu/mte-kernel",
          "repository": "https://github.com/susisu/mte-kernel.git"
        },
        "accessor": {
          "access": ["public", "protected"],
          "autoPrivate": true
        },
        "test": {
          "source": "test",
          "interfaces": ["describe", "context", "it", "specify", "suite", "test"],
          "includes": ["\\.js$"]
        }
      }
    },
    {
      "name": "esdoc-importpath-plugin",
      "option": {
        "replaces": [{ "from": "^lib/.*\\.js$", "to": "dist/mte-kernel.js" }]
      }
    }
  ]
}
